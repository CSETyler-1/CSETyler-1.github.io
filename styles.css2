body {
    font-family: "Segoe UI", Arial, sans-serif;
    background: linear-gradient(to bottom, #eceff1, #f5f5f5);
    padding: 20px;
}

h1 {
    text-align: center;
    letter-spacing: 2px;
}

.profile-img {
    display: block;
    margin: 20px auto;
    width: 200px;
    border-radius: 50%;
    border: 4px solid #333;
}

.about, .skills {
    max-width: 900px;
    margin: 0 auto 40px auto;
}

/* Base bubble style */
.bubble {
    padding: 22px;
    margin-bottom: 25px;
    border-radius: 18px;
    background-color: white;
    box-shadow: 0 6px 14px rgba(0, 0, 0, 0.12);
    transition: transform 0.3s ease;
}

.bubble:hover {
    transform: translateY(-5px);
}

.bubble h2 {
    margin-top: 0;
}

